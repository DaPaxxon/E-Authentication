<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/menu.css">
    <link rel="stylesheet" href="/public/css/topMenu.css">
    <link rel="stylesheet" href="/public/css/dashboard.css">
    <link rel="stylesheet" href="/public/css/table.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <title>E Authentication</title>
</head>
<body>
    <div id="fullBody">
        <%-include("./partials/menu.ejs")%>
        <div id="coverBody"> 
            <%-include("./partials/topMenu.ejs")%>
            <div id="main">
                <div id="table">
                    <div class="table-head">
                        <div class="table-column">
                            Name
                        </div>
                        <div class="table-column">
                            Mobile No.
                        </div>
                        <div class="table-column">
                            Email
                        </div>
                        <div class="table-column">
                            Date
                        </div>
                        <div class="table-column">
                            Action
                        </div>
                    </div>
                    <% if(data && data.users){ %> 
                        <% data.users.forEach(user=>{%>
                            <div class="table-row">
                                <div class="table-column">
                                    <%=user.fullname%> 
                                </div>
                                <div class="table-column">
                                    <%=user.phone%>
                                </div>
                                <div class="table-column">
                                    <%=user.email%>
                                </div>
                                <div class="table-column">
                                    <%let year=user.createdAt.getFullYear()%>
                                    <%let month=user.createdAt.getMonth()%>
                                    <%let day=user.createdAt.getDay()%>
                                    <%=day%>/<%=month%>/<%=year%>
                                </div>
                                <div class="table-column deleteUser" data-userId="<%=user._id%>">
                                    Delete
                                </div>
                            </div>
                        <%}) %> 
                        
                        <% } %> 
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="/public/js/menu.js"></script>
    <script type="text/javascript" src="/public/js/deleteUser.js"></script>

    <% if(error){%>
        <script type="text/javascript">
            alert("<%= error %> ")
        </script>
    <% } %> 
</body>
</html>